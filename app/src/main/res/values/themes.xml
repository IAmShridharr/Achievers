<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Achievers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/red_100</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

<!--        Background Color-->
        <item name="colorSurface">@color/red_50</item>

<!--        Text Color-->
        <item name="colorOnSurface">@color/red_700</item>

<!--        Icon Color-->
        <item name="colorOnSurfaceVariant">@color/red_300</item>
        
        <item name="colorControlHighlight">@color/red_400</item>

<!--        Selected Icon Color-->
        <item name="colorOnSecondaryContainer">@color/red_700</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Change the background color of the dialog -->

        <!-- Change the text color of the dialog -->

        <!-- Change the color of the selected date -->
        <item name="colorSecondary">@color/red_700</item>

        <!-- Change the color of the buttons -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="android:colorButtonNormal">@color/red_700</item>
        <item name="colorOnPrimary">@color/red_700</item>
    </style>

</resources>