<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Achievers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_300</item>
        <item name="colorPrimaryVariant">@color/pink_900</item>
        <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/red_300</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

        <!--        Background Color-->
        <item name="colorSurface">@color/red_500</item>

        <!--        Text Color-->
        <item name="colorOnSurface">@color/red_50</item>

        <!--        Icon Color-->
        <item name="colorOnSurfaceVariant">@color/red_100</item>

        <!--        Selected Icon Color-->
        <item name="colorOnSecondaryContainer">@color/red_50</item>

    </style>
</resources>